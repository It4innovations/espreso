
METIS = "metis"

def configure(ctx):
    ctx.env.append_unique("LIB", [ "metis" ])

def build(ctx):
    if ctx.env.ESINT == 32:
        metis = "metis32"
    if ctx.env.ESINT == 64:
        metis = "metis64"

    ctx(
        rule = "cp ${SRC} ${TGT}",
        source = "../libs/lib" + metis + ".so",
        target = "../../libs/libmetis.so",
        alwayes = True
    )

