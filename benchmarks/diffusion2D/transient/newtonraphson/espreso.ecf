# ESPRESO Configuration File

#BENCHMARK ARG0 [ SQUARE8, TRIANGLE6 ]

DEFAULT_ARGS {
  0     SQUARE4;

  1           2;
  2           2;

  3           3;
  4           2;

  5          10;
  6          15;

  7        FETI;
}

INPUT_TYPE            GENERATOR;
PHYSICS   HEAT_TRANSFER_2D;

GENERATOR {
  SHAPE   GRID;

  UNIFORM_CLUSTERS  FALSE;

  GRID {
    LENGTH_X                   1;
    LENGTH_Y                   1;
    LENGTH_Z                   1;

    NODES {
      LEFT     <0 , 1> <0 , 0> <0 , 0>;
      TOP      <0 , 0> <0 , .8> <0 , 0>;
      BOTTOM   <1 , 1> <0 , .8> <0 , 0>;
    }

    EDGES {
      RIGHT   <0 , 1> <1 , 1> <0 , 0>;
    }

    ELEMENT_TYPE          [ARG0];

    BLOCKS_X                   1;
    BLOCKS_Y                   1;
    BLOCKS_Z                   1;

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z                 1;

    DOMAINS_X             [ARG3];
    DOMAINS_Y             [ARG4];
    DOMAINS_Z                  1;

    ELEMENTS_X            [ARG5];
    ELEMENTS_Y            [ARG6];
    ELEMENTS_Z                 1;
  }
}

HEAT_TRANSFER_2D {
  LOAD_STEPS        1;

  MATERIALS {
    1 {

      DENS   1;
      CP     1;

      THERMAL_CONDUCTIVITY {
        MODEL                                   ISOTROPIC;

        KXX   2 + 5 * (TEMPERATURE/50) * (TEMPERATURE/50) / 10;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  INITIAL_TEMPERATURE {
    ALL_ELEMENTS   200;
  }

  STABILIZATION   CAU;
  SIGMA             0;

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME   .01;
      TYPE      TRANSIENT;
      MODE      NONLINEAR;
      SOLVER       [ARG7];

      TRANSIENT_SOLVER {
        METHOD   CRANK_NICOLSON;

        TIME_STEP           .0004;
      }

      NONLINEAR_SOLVER {
        METHOD                   NEWTON_RAPHSON;

        CHECK_TEMPERATURE                  TRUE;
        CHECK_HEAT                        FALSE;
        REQUESTED_TEMPERATURE_RESIDUAL   0.0001;
        REQUESTED_HEAT_RESIDUAL          0.0001;

        STEPPING                          FALSE;
        SUBSTEPS                              1;
        MAX_ITERATIONS                       15;

        LINE_SEARCH                       FALSE;
        TANGENT_MATRIX_CORRECTION         FALSE;
      }

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        PRECISION            1E-08;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
      }

      TEMPERATURE {
        LEFT     300;
        TOP      300 - 400 * (0.25 - (0.5 - Y)^2);
        BOTTOM   300 - 400 * (0.25 - (0.5 - Y)^2);
      }

      CONVECTION {
        RIGHT {
          HEAT_TRANSFER_COEFFICIENT  10;
          EXTERNAL_TEMPERATURE     1000;
        }
      }
    }
  }
}

OUTPUT {
  RESULTS_STORE_FREQUENCY    EVERY_SUBSTEP;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS                         ALL;

  MONITORING {
    1 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MIN;
      PROPERTY  TEMPERATURE;
    }

    2 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MAX;
      PROPERTY  TEMPERATURE;
    }

    4 {
      REGION           LEFT;
      STATISTICS        AVG;
      PROPERTY  TEMPERATURE;
    }

    5 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MAX;
      PROPERTY     GRADIENT;
    }

    6 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MAX;
      PROPERTY         FLUX;
    }
  }
}
