
source_files = (
    "matrices/denseMatrix.cpp",
    "matrices/matrix.cpp",
    "logging/logging.cpp",
    "logging/timeeval.cpp",
)

def configure(ctx):
    ctx.env.append_unique("DEFINES", [ "INFO_BLOCKING_EVENTS" ])

def build(ctx):
    ctx.lib(
        source          = source_files,
        target          = "esbasis",
        use             = "espreso_includes",
        install_path    = ctx.LIBRARIES
    )
