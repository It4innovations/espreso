  MATERIALS {
    1 {
      COORDINATE_SYSTEM {
        TYPE   CARTESIAN;
      }

      DENS               1.2;
      SPEED_OF_SOUND     343;
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME       1;
      TYPE         HARMONIC;
      MODE           LINEAR;
      SYSTEM        [ARG10];
      SOLVER        [ARG11];

