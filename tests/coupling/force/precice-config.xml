<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <data:vector name="Force" />
  <data:vector name="Displacement" />

  <mesh name="Solid-Mesh" dimensions="2">
    <use-data name="Displacement" />
  </mesh>

  <mesh name="Fluid-Mesh-Nodes" dimensions="2">
    <use-data name="Displacement" />
  </mesh>

  <mesh name="Fluid-Mesh-Centers" dimensions="2">
    <use-data name="Force" />
  </mesh>

  <participant name="Solid">
    <export:vtk directory="precice-exports" />
    <provide-mesh name="Solid-Mesh" />
    <receive-mesh name="Fluid-Mesh-Nodes" from="Fluid" direct-access="true"/>
    <receive-mesh name="Fluid-Mesh-Centers" from="Fluid" direct-access="true"/>
    <read-data name="Force" mesh="Fluid-Mesh-Centers" />
    <write-data name="Displacement" mesh="Solid-Mesh" />
  </participant>

  <participant name="Fluid">
    <export:vtk directory="precice-exports" />
    <provide-mesh name="Fluid-Mesh-Nodes" />
    <provide-mesh name="Fluid-Mesh-Centers" />
    <receive-mesh name="Solid-Mesh" from="Solid" />
    <write-data name="Force" mesh="Fluid-Mesh-Centers" />
    <read-data name="Displacement" mesh="Fluid-Mesh-Nodes" />
    <mapping:rbf direction="read" from="Solid-Mesh" to="Fluid-Mesh-Nodes" constraint="consistent">
      <basis-function:compact-polynomial-c6 support-radius="0.1" />
    </mapping:rbf>
  </participant>

  <m2n:sockets acceptor="Solid" connector="Fluid" exchange-directory="." />

  <coupling-scheme:serial-explicit>
    <participants first="Fluid" second="Solid" />
    <max-time-windows value="1" />
    <time-window-size value="1" />
    <exchange data="Force" mesh="Fluid-Mesh-Centers" from="Fluid" to="Solid" />
    <exchange data="Displacement" mesh="Solid-Mesh" from="Solid" to="Fluid" />
  </coupling-scheme:serial-explicit>
</precice-configuration>
