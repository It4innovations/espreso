    LENGTH_Z                   1;

    NODES {
      RIGHT  <1 , 1> <0 , 1> <0 , 1>;
      LEFT   <0 , 0> <0 , 1> <0 , 1>;
      BOTTOM <0 , 1> <0 , 0> <0 , 1>;
