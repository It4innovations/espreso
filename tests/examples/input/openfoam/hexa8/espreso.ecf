INPUT OPENFOAM;
PHYSICS LINEAR_ELASTICITY_3D;

OPENFOAM {
  PATH    .;
  DOMAINS 2;
}

LINEAR_ELASTICITY_3D {

  PHYSICS_SOLVER {
    LOAD_STEPS          1;

    LOAD_STEPS_SETTINGS {
      1 {
        TYPE        STEADY_STATE;
        MODE              LINEAR;
        SOLVER_LIBRARY   ESPRESO;

        ESPRESO {
          METHOD        HYBRID_FETI;
          SOLVER                PCG;
          PRECONDITIONER     LUMPED;
        }
      }
    }
  }

  DISPLACEMENT {
    fixedWalls X 0, Y 0, Z 0;
  }

  NORMAL_PRESURE {
    movingWall 100;
  }

  TEMPERATURE {
    frontAndBack 30;
  }
  
  MATERIALS {

    1 {

      DENSITY 7850;
      MIXY     0.3;
      EX     2.1e9;

      MODEL LINEAR_ELASTIC_ISOTROPIC;
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS 1;
  }
}
