INPUT GENERATOR;
PHYSICS ADVECTION_DIFFUSION_2D;

GENERATOR {

  SHAPE GRID;

  GRID {
    UNIFORM_DECOMPOSITION 1;

    ELEMENT_TYPE  SQUARE4;

    LENGTH_X            1;
    LENGTH_Y            1;
    LENGTH_Z            1;

    BLOCKS_X            1;
    BLOCKS_Y            1;
    BLOCKS_Z            1;

    CLUSTERS_X          4;
    CLUSTERS_Y          1;
    CLUSTERS_Z          1;

    DOMAINS_X           1;
    DOMAINS_Y           2;
    DOMAINS_Z           1;

    ELEMENTS_X          4;
    ELEMENTS_Y          8;
    ELEMENTS_Z          1;

    NODES {
        TOP    "<0, 0> <0, 1> <0, 0>";
        BOTTOM "<1, 1> <0, 1> <0, 0>";
    }

    EDGES {
        LEFT   "<0, 1> <0, 0> <0, 0>";
        RIGHT  "<0, 1> <1, 1> <0, 0>";
    }

    ELEMENTS {
        ALL_EL ALL;
    }
  }
}

ADVECTION_DIFFUSION_2D {

  SOLVER_LIBRARY   ESPRESO;

  ESPRESO {

    METHOD          [ARG0];
    SOLVER          [ARG1];
    PRECONDITIONER  [ARG2];
    REGULARIZATION  [ARG3];
    B0_TYPE         [ARG4];

    REDUNDANT_LAGRANGE   0;
    SCALING              0;
    EPSILON           1e-3;
    ITERATIONS          50;
  }

  STABILIZATION CAU;
  SIGMA           0;

  TEMPERATURE {
    1 {
      TOP    1;
      BOTTOM 1;
    }
  }

  CONVECTION {
    1 {
      LEFT {
        HEAT_TRANSFER_COEFFICIENT 10;
        EXTERNAL_TEMPERATURE      50;
      }
      RIGHT {
        HEAT_TRANSFER_COEFFICIENT 10;
        EXTERNAL_TEMPERATURE      50;
      }
    }
  }

  MATERIALS {

    1 {
      MODEL ISOTROPIC;

      DENSITY 1;
      KXX     1;
      KXY     1;
      Cp      1;
    }
  }

  MATERIAL_SET {
    ALL_EL 1;
  }
}



