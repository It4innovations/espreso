# ESPRESO Configuration File

DEFAULT_ARGS {
  0    HEXA8;

  1        1;
  2        1;
  3        1;

  4        1;
  5        1;
  6        1;

  7      150;
  8        5;
  9        4;
}

INPUT_TYPE              GENERATOR;
PHYSICS      STRUCTURAL_MECHANICS;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                    0;
    START_Y                    0;
    START_Z                    0;

    LENGTH_X                  15;
    LENGTH_Y                  .5;
    LENGTH_Z                  .4;

    NODES {
      FIXL   < 0 ,  0> <0 , .5> <0 , .4>;
      FIXR   <15 , 15> <0 , .5> <0 , .4>;
      FIXB   < 0 , 15> <0 ,  0> <0 , .4>;
    }

    FACES {
      CONTACT_UP   <0 , 15> <0 , .5> <.4 , .4>;
      CONTACT_DOWN <0 , 15> <0 , .5> < 0 ,  0>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z            [ARG3];

    DOMAINS_X             [ARG4];
    DOMAINS_Y             [ARG5];
    DOMAINS_Z             [ARG6];

    ELEMENTS_X            [ARG7];
    ELEMENTS_Y            [ARG8];
    ELEMENTS_Z            [ARG9];
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   1;

  MATERIALS {
    1 {
      DENS   7850;

      ELASTICITY_PROPERTIES {
        MATERIAL_MODEL   KIRCHHOFF;

        MIXY                   0.3;
        EX                  2.1E11;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME    1e-2;
      TYPE        TRANSIENT;
      MODE        NONLINEAR;
      SOLVER           FETI;

      COROTATION              TRUE;

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER     MPRGP;
        REGULARIZATION    ANALYTIC;
        PRECISION            1e-10;
        PRECISION_IN         1e-12;
        MAX_ITERATIONS         500;
        EXIT_ON_NONCONVERGENCE   0;
      }

      NONLINEAR_SOLVER {
        MAX_ITERATIONS                     15;
        REQUESTED_DISPLACEMENT_RESIDUAL  1e-5;
      }

      TRANSIENT_SOLVER {
        TIME_STEP      1e-3;

        NUMERICAL_DAMPING  0.1;

        DAMPING {
          RAYLEIGH {
            TYPE   DIRECT;
            DIRECT_DAMPING {
              STIFFNESS    0;
              MASS        10;
            }
          }
        }
      }

      DISPLACEMENT {
        FIXL   { X 0; }
        FIXB   { Y 0; }
      }

      FIXED_TUBE {
        CONTACT_UP {
          GAP                             .5;
          RADIUS                           1;
          DIRECTION { X  0.0; Y  1.00; Z  0.0; }
          CENTER    { X  7.5; Y  0.25; Z  1.4 - 1.8 * 1e-3 * SUBSTEP; }
        }
        CONTACT_DOWN {
          GAP                             .5;
          RADIUS                           1;
          DIRECTION { X  0.0; Y  1.00; Z  0.0; }
          CENTER    { X 12.0; Y  0.25; Z -1.0; }
        }
      }
    }
  }
}

OUTPUT {
  RESULTS_STORE_FREQUENCY           NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS         BASIC;

  MONITORING {
    1 {
      REGION        ALL_NODES;
      STATISTICS          MIN;
      PROPERTY   DISPLACEMENT;
    }

    2 {
      REGION        ALL_NODES;
      STATISTICS          MAX;
      PROPERTY   DISPLACEMENT;
    }

    3 {
      REGION        ALL_NODES;
      STATISTICS          AVG;
      PROPERTY   DISPLACEMENT;
    }
  }
}
