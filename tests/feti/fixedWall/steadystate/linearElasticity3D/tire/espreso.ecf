# ESPRESO Configuration File

DEFAULT_ARGS {
  0    HEXA8;

  1        2;
  2        2;
  3        1;

  4        2;
  5        2;
  6        4;

  7        4;
  8        4;
  9       16;
}

INPUT_TYPE              GENERATOR;
PHYSICS      STRUCTURAL_MECHANICS;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                    0;
    START_Y                    0;
    START_Z                    0;

    LENGTH_X                   1;
    LENGTH_Y                   1;
    LENGTH_Z                   1;

    PROJECTION_Y      (Y + 1) * cos((Z + 1) * PI);
    PROJECTION_Z      (Y + 1) * sin((Z + 1) * PI) + 2;

    FACES {
      CUT1     <0 , 1> <0 , 1> <1 , 1>;
      CUT2     <0 , 1> <0 , 1> <0 , 0>;
      CONTACT  <0 , 1> <1 , 1> <0 , 1>;
    }

    ELEMENTS {
      SOFT    <0 , 1> <.5 , 1> <0 , 1>;
      HARD    <0 , 1> <0 , .5> <0 , 1>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z            [ARG3];

    DOMAINS_X             [ARG4];
    DOMAINS_Y             [ARG5];
    DOMAINS_Z             [ARG6];

    ELEMENTS_X            [ARG7];
    ELEMENTS_Y            [ARG8];
    ELEMENTS_Z            [ARG9];
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   1;

  CONTACT_INTERFACES       TRUE;

  MATERIALS {
    1 {
      DENS   7850;

      ELASTICITY_PROPERTIES {
        MATERIAL_MODEL   KIRCHHOFF;

        MIXY                   0.3;
        EX                  2.1E09;
      }
    }

    2 {

      DENS   7850;
      CP        1;

      ELASTICITY_PROPERTIES {
        MODEL   ISOTROPIC;

        MIXY          0.3;
        EX         2.1E11;
      }

      THERMAL_EXPANSION {
        TEX             0;
      }
    }
  }

  MATERIAL_SET {
    SOFT     1;
    HARD     2;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME    4e-3;
      TYPE     STEADY_STATE;
      MODE           LINEAR;
      SOLVER           FETI;

      COROTATION              TRUE;

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER    SMALBE;
        REGULARIZATION    ANALYTIC;
        PRECISION            1e-06;
        MAX_ITERATIONS        5000;
      }

      NONLINEAR_SOLVER {
        MAX_ITERATIONS                     15;
        REQUESTED_DISPLACEMENT_RESIDUAL  1e-3;
      }

      TRANSIENT_SOLVER {
        TIME_STEP      2e-4;

        DAMPING {
          RAYLEIGH {
            TYPE   DIRECT;
            DIRECT_DAMPING {
              STIFFNESS    0;
              MASS         0;
            }
          }
        }
      }

      DISPLACEMENT {
        CUT1   { X 0 ; Y 0 ; Z -.05; }
        CUT2   { X 0 ; Y 0 ; Z -.05; }
      }

      FIXED_WALL {
        CONTACT {
          GAP                .1;
          NORMAL          { Z 1; }
          POINT { X 0; Y 0; Z 0; }
        }
      }
    }
  }
}

OUTPUT {
#  RESULTS_STORE_FREQUENCY           NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS         ALL;

  MONITORING {
    1 {
      REGION        ALL_NODES;
      STATISTICS          MIN;
      PROPERTY   DISPLACEMENT;
    }

    2 {
      REGION        ALL_NODES;
      STATISTICS          MAX;
      PROPERTY   DISPLACEMENT;
    }

    3 {
      REGION        ALL_NODES;
      STATISTICS          AVG;
      PROPERTY   DISPLACEMENT;
    }
  }
}
