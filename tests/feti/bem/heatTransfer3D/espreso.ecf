# ESPRESO Configuration File

DEFAULT_ARGS {
  0           2;
  1           2;
  2           1;

  3           2;
  4           2;
  5           2;

  6           4;
  7           4;
  8           8;

  9         BEM;
}

INPUT_TYPE         GENERATOR;
PHYSICS        HEAT_TRANSFER;

GENERATOR {
  SHAPE   GRID;

  GRID {
    LENGTH_X                   4;
    LENGTH_Y                   4;
    LENGTH_Z                   4;

    NODES {
      BOTTOM   <4 , 4> <0 , 4> <0 , 4>;
      TOP      <0 , 0> <0 , 4> <0 , 4>;
    }

    ELEMENT_TYPE          TETRA4;

    PROJECTION_X           X - 2;
    PROJECTION_Y           Y - 2;
    PROJECTION_Z           Z - 2;

    BLOCKS_X                   1;
    BLOCKS_Y                   1;
    BLOCKS_Z                   1;

    CLUSTERS_X            [ARG0];
    CLUSTERS_Y            [ARG1];
    CLUSTERS_Z            [ARG2];

    DOMAINS_X             [ARG3];
    DOMAINS_Y             [ARG4];
    DOMAINS_Z             [ARG5];

    ELEMENTS_X            [ARG6];
    ELEMENTS_Y            [ARG7];
    ELEMENTS_Z            [ARG8];
  }
}

HEAT_TRANSFER {
  LOAD_STEPS        1;

  DISCRETIZATION {
    ALL_ELEMENTS  [ARG9];
  }

  MATERIALS {
    1 {
      THERMAL_CONDUCTIVITY {
        MODEL   ISOTROPIC;

        KXX            5;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  INITIAL_TEMPERATURE {
    ALL_ELEMENTS   200;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE         LINEAR;
      SOLVER         FETI;

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER      LUMPED;
        PRECISION            1E-09;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION   ALGEBRAIC;
        MAX_ITERATIONS         200;
        PRECISION             1e-7;
      }

      TEMPERATURE {
        TOP      100;
        BOTTOM   300;
      }
    }
  }
}

OUTPUT {
#  RESULTS_STORE_FREQUENCY    NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS         ALL;

  MONITORING {
    1 {
