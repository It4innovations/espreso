        LENGTH_Z                   1;

        NODES {
          LEFT    <-1 , 1> <-2.1 , -2.1> <0 , 1>;
        }

        ELEMENTS {
          BOTTOM  <-1 , 1> <-3 ,  4> <0 , 1>;
        }

        ELEMENT_TYPE          [ARG0];

        BLOCKS_X                   1;
        BLOCKS_Y                   1;
        BLOCKS_Z                   1;

        CLUSTERS_X                 1;
        CLUSTERS_Y                 1;
        CLUSTERS_Z                 1;

        DOMAINS_X             [ARG1];
        DOMAINS_Y             [ARG2];
        DOMAINS_Z             [ARG3];

        ELEMENTS_X            [ARG4];
        ELEMENTS_Y            [ARG5];
        ELEMENTS_Z            [ARG6];
      }

      1 {
        START_X                  -.5;
        START_Y                    0;

        LENGTH_X                   1;
        LENGTH_Y                   5;
        LENGTH_Z                   1;

        PROJECTION_Z         Z + 0.1;

        NODES {
          RIGHT   <-1 , 1> <5 , 5> <1 , 2>;
          FORCE   <-1 , 1> <0 , 5> <2 , 2>;
        }

        ELEMENTS {
          UP        <-1 , 1><0 , 5><1 , 2>;
        }

        ELEMENT_TYPE          [ARG7];

        BLOCKS_X                   1;
        BLOCKS_Y                   1;
        BLOCKS_Z                   1;

        CLUSTERS_X                 1;
        CLUSTERS_Y                 1;
        CLUSTERS_Z                 1;

        DOMAINS_X             [ARG8];
        DOMAINS_Y             [ARG9];
        DOMAINS_Z            [ARG10];

        ELEMENTS_X           [ARG11];
        ELEMENTS_Y           [ARG12];
        ELEMENTS_Z           [ARG13];
      }
    }
  }
}

