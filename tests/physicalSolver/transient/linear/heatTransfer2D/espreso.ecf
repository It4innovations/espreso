# ESPRESO Configuration File

#BENCHMARK ARG0 [ SQUARE4, SQUARE8, TRIANGLE3, TRIANGLE6 ]

DEFAULT_ARGS {
  0   SQUARE4;

  1           2;
  2           2;

  3           3;
  4           2;

  5          10;
  6          15;
  
  7     MKLPDSS;
}

INPUT_TYPE            GENERATOR;
PHYSICS   HEAT_TRANSFER_2D;

GENERATOR {
  SHAPE   GRID;

  GRID {
    LENGTH_X                   1;
    LENGTH_Y                   1;
    LENGTH_Z                   1;

    NODES {
      TOP      <0 , 0> <0 , 1> <0 , 0>;
      BOTTOM   <1 , 1> <0 , 1> <0 , 0>;
    }

    EDGES {
      LEFT    <.2 , .8> <0 , 0> <0 , 0>;
      RIGHT   <.2 , .8> <1 , 1> <0 , 0>;
    }

    ELEMENT_TYPE          [ARG0];

    BLOCKS_X                   1;
    BLOCKS_Y                   1;
    BLOCKS_Z                   1;

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z                 1;

    DOMAINS_X             [ARG3];
    DOMAINS_Y             [ARG4];
    DOMAINS_Z                  1;

    ELEMENTS_X            [ARG5];
    ELEMENTS_Y            [ARG6];
    ELEMENTS_Z                 1;
  }
}

HEAT_TRANSFER_2D {
  LOAD_STEPS        1;

  MATERIALS {
    1 {
      COORDINATE_SYSTEM {
        TYPE   CARTESIAN;
        ROTATION   { Z 35; }
      }

      DENS   1;
      CP     1;

      THERMAL_CONDUCTIVITY {
        MODEL   DIAGONAL;

        KXX           .01;
        KYY            .1;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  INITIAL_TEMPERATURE {
    ALL_ELEMENTS 300;
  }

  STABILIZATION   CAU;
  SIGMA             0;

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     2;
      TYPE      TRANSIENT;
      MODE         LINEAR;
      SOLVER       [ARG7];

      FETI {
        METHOD                TOTAL_FETI;
        PRECONDITIONER         DIRICHLET;
        PRECISION                  1E-09;
        ITERATIVE_SOLVER             PCG;
        REGULARIZATION          ANALYTIC;
      }

      TRANSIENT_SOLVER {
        METHOD   CRANK_NICOLSON;

        TIME_STEP            .1;
      }

      TEMPERATURE {
        TOP      400;
        BOTTOM   400;
      }

      HEAT_FLOW {
        RIGHT   1200;
      }

      HEAT_FLUX {
        LEFT    2000;
      }
    }
  }
}

OUTPUT {
  MODE                                    SYNC;

#  RESULTS_STORE_FREQUENCY        NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_NTH_SUBSTEP;
  MONITORS_NTH_STEPPING                     10;

  STORE_RESULTS                         ALL;

  MONITORING {
    1 {
      REGION            TOP;
      STATISTICS        AVG;
      PROPERTY  TEMPERATURE;
    }

    2 {
      REGION         BOTTOM;
      STATISTICS        AVG;
      PROPERTY  TEMPERATURE;
    }

    3 {
      REGION      ALL_NODES;
      STATISTICS        AVG;
      PROPERTY  TEMPERATURE;
    }

    4 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MAX;
      PROPERTY       FLUX_Y;
    }

    5 {
      REGION   ALL_ELEMENTS;
      STATISTICS        MIN;
      PROPERTY       FLUX_Y;
    }
  }
}
