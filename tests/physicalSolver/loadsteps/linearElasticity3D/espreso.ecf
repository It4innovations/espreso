  GRID {
    START_X                    0;
    START_Y                    0;
    START_Z                    0;

    LENGTH_X                   5;
    LENGTH_Y                   1;
    LENGTH_Z                   1;

    NODES {
      FIX   <0 , 0> <0 , 1> <0 , 1>;
    }

    FACES {
      PRESS <5 , 5> <0 , 1> <0 , 1>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z            [ARG3];

    DOMAINS_X             [ARG4];
    DOMAINS_Y             [ARG5];
    DOMAINS_Z             [ARG6];

    ELEMENTS_X            [ARG7];
    ELEMENTS_Y            [ARG8];
    ELEMENTS_Z            [ARG9];
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   2;

  MATERIALS {
    1 {

      DENS   7850;
      CP        1;

      MATERIAL_MODEL  HYPER_ELASTIC;

      HYPER_ELASTIC_PROPERTIES {
        MODEL     KIRCHHOFF;
      }

      LINEAR_ELASTIC_PROPERTIES {
        MODEL   ISOTROPIC;

        MIXY          0.3;
        EX         2.1E11;
      }

      THERMAL_EXPANSION {
        TEX             0;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME       1;
      TYPE     STEADY_STATE;
      MODE        NONLINEAR;
      SOLVER        MKLPDSS;

      DISPLACEMENT {
        FIX   { X 0 ; Y 0 ; Z 0; }
