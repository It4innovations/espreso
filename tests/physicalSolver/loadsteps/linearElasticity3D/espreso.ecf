        PRESS {
          PRESSURE     5e8;
          DIRECTION { Z -1; }
        }
      }
    }
    2 {
      DURATION_TIME    1e-1;
      TYPE        TRANSIENT;
      MODE        NONLINEAR;
      SOLVER        [ARG10];

      TRANSIENT_SOLVER {
        TIME_STEP      1e-3;
      }

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
        PRECISION            1e-12;
      }

      DISPLACEMENT {
        FIX   { X 0 ; Y 0 ; Z 0; }
      }
