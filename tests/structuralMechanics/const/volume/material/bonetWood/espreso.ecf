# ESPRESO Configuration File

DEFAULT_ARGS {
  0    HEXA8;

  1        2;
  2        2;
  3        1;

  4        2;
  5        2;
  6        2;

  7        4;
  8        4;
  9        8;

  10 MKLPDSS;
}

INPUT_TYPE              GENERATOR;
PHYSICS      STRUCTURAL_MECHANICS;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                    0;
    START_Y                    0;
    START_Z                    0;

    LENGTH_X                   1;
    LENGTH_Y                   1;
    LENGTH_Z                   2;

    NODES {
      Z0   <0 , 1> <0 , 1> <0 , 0>;
      Z1   <0 , 1> <0 , 1> <2 , 2>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z            [ARG3];

    DOMAINS_X             [ARG4];
    DOMAINS_Y             [ARG5];
    DOMAINS_Z             [ARG6];

    ELEMENTS_X            [ARG7];
    ELEMENTS_Y            [ARG8];
    ELEMENTS_Z            [ARG9];
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   1;

  MATERIALS {
    1 {
      DENS                    15220;

      ELASTICITY_PROPERTIES {
        MATERIAL_MODEL   BONET_WOOD;

        MIXY                    0.3;
        EX                     7E10;

        SIGMA                  1e08;
        HISOTROPIC           2.4e09;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE      NONLINEAR;
      SOLVER      MKLPDSS;

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
      }

      NONLINEAR_SOLVER {
        CHECK_DISPLACEMENT                 TRUE;
        CHECK_FORCES                      FALSE;
        REQUESTED_DISPLACEMENT_RESIDUAL    1e-5;
        REQUESTED_FORCES_RESIDUAL          1e-5;

        MAX_ITERATIONS                       15;
      }
 
      DISPLACEMENT {
        Z0   { X 0; Y 0; Z .00; }
        Z1   { X 0; Y 0; Z .1; }
      }
    }
  }
}

OUTPUT {
#  RESULTS_STORE_FREQUENCY            NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS         USER;

  RESULTS_SELECTION {
    DISPLACEMENT   TRUE;
  }

  MONITORING {
    1 {
      REGION        ALL_NODES;
      STATISTICS          MIN;
      PROPERTY   DISPLACEMENT;
    }

    2 {
      REGION        ALL_NODES;
      STATISTICS          MAX;
      PROPERTY   DISPLACEMENT;
    }

    3 {
      REGION        ALL_NODES;
      STATISTICS          AVG;
      PROPERTY   DISPLACEMENT;
    }
  }
}
