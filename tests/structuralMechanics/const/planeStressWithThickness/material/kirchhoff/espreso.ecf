# ESPRESO Configuration File

DEFAULT_ARGS {
  0  SQUARE4;

  1        1;
  2        1;

  3        1;
  4        1;

  5        3;
  6       15;

  7  MKLPDSS;
}

INPUT_TYPE              GENERATOR;
PHYSICS      STRUCTURAL_MECHANICS;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                -0.05;
    START_Y                    0;

    LENGTH_X                  .1;
    LENGTH_Y                   1;

    NODES {
      Y0   <-0.05 , 0.05> <0 , 0> <0 , 0>;
      X1   < 0.05 , 0.05> (0 , 1) <0 , 0>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z                 1;

    DOMAINS_X             [ARG3];
    DOMAINS_Y             [ARG4];
    DOMAINS_Z                  1;

    ELEMENTS_X            [ARG5];
    ELEMENTS_Y            [ARG6];
    ELEMENTS_Z                 1;
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   1;

  MATERIALS {
    1 {
      DENS   7850;

      ELASTICITY_PROPERTIES {
        MATERIAL_MODEL   KIRCHHOFF;

        MIXY                   0.3;
        EX                  2.1e11;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE      NONLINEAR;
      SOLVER       [ARG7];

      NONLINEAR_SOLVER {
        MAX_ITERATIONS    10;
      }

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
        PRECISION             1e-9;
      }

      DISPLACEMENT {
        Y0   { X 0 ; Y 0 ; }
      }

      NORMAL_PRESSURE {
        X1   1e8;
      }
    }
  }
}

