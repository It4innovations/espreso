# ESPRESO Configuration File

DEFAULT_ARGS {
  0  SQUARE4;

  1        2;
  2        2;

  3        2;
  4        2;

  5       10;
  6        2;
}

INPUT_TYPE              GENERATOR;
PHYSICS      STRUCTURAL_MECHANICS;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                    0;
    START_Y                    0;
    START_Z                    0;

    LENGTH_X                   5;
    LENGTH_Y                   1;
    LENGTH_Z                   1;

    NODES {
      FIX   <0 , 0> <0 , 1> <0 , 0>;
    }

    EDGES {
      PRESS <5 , 5> <0 , 1> <0 , 0>;
    }

    ELEMENT_TYPE          [ARG0];

    CLUSTERS_X            [ARG1];
    CLUSTERS_Y            [ARG2];
    CLUSTERS_Z                 1;

    DOMAINS_X             [ARG3];
    DOMAINS_Y             [ARG4];
    DOMAINS_Z                  1;

    ELEMENTS_X            [ARG5];
    ELEMENTS_Y            [ARG6];
    ELEMENTS_Z                 1;
  }
}

STRUCTURAL_MECHANICS {
  LOAD_STEPS   1;

  MATERIALS {
    1 {
      DENS   7850;

      ELASTICITY_PROPERTIES {
        MATERIAL_MODEL   KIRCHHOFF;

        MIXY                   0.3;
        EX                  2.1E11;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME  5e-3;
      TYPE      TRANSIENT; # DUE TO ISSUES WITH KERNELS
      MODE      NONLINEAR;
      SOLVER         FETI;

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER   DIRICHLET;
        ITERATIVE_SOLVER       PCG;
        REGULARIZATION    ANALYTIC;
        PRECISION             1e-9;
      }

      TRANSIENT_SOLVER {
        TIME_STEP       5e-4;
      }

      NONLINEAR_SOLVER {
        MAX_ITERATIONS                      5;
        REQUESTED_DISPLACEMENT_RESIDUAL  1e-4;
      }

      DISPLACEMENT {
        FIX   { X 0 ; Y 0 ; Z 0; }
      }

      PRESSURE {
        PRESS {
          PRESSURE    1e9;
          DIRECTION { Y -1; }
        }
      }
    }
  }
}

OUTPUT {
#  RESULTS_STORE_FREQUENCY            NEVER;
  MONITORS_STORE_FREQUENCY   EVERY_SUBSTEP;

  STORE_RESULTS         ALL;

  MONITORING {
    1 {
      REGION        ALL_NODES;
      STATISTICS          MIN;
      PROPERTY   DISPLACEMENT;
    }

    2 {
      REGION        ALL_NODES;
      STATISTICS          MAX;
      PROPERTY   DISPLACEMENT;
    }

    3 {
      REGION        ALL_NODES;
      STATISTICS          AVG;
      PROPERTY   DISPLACEMENT;
    }
  }
}
