# ESPRESO Configuration File

DEFAULT_ARGS {
  0   SQUARE4;

  1         2;
  2         2;

  3         2;
  4         2;

  5        20;
  6        20;

  7   MKLPDSS;
}

INPUT_TYPE              GENERATOR;
PHYSICS   STRUCTURAL_MECHANICS_2D;

GENERATOR {
  SHAPE   GRID;

  GRID {
    START_X                     0;
    START_Y                     0;

    LENGTH_X                    1;
    LENGTH_Y                    1;

    PROJECTION_X      10 * (X + 1) * cos(Y * PI / 4);
    PROJECTION_Y      10 * (X + 1) * sin(Y * PI / 4);

    NODES {
      X1   <1 , 1> <0 , 1> <0 , 0>;
    }

    ELEMENT_TYPE           [ARG0];

    CLUSTERS_X             [ARG1];
    CLUSTERS_Y             [ARG2];
    CLUSTERS_Z                  1;

    DOMAINS_X              [ARG3];
    DOMAINS_Y              [ARG4];
    DOMAINS_Z                   1;

    ELEMENTS_X             [ARG5];
    ELEMENTS_Y             [ARG6];
    ELEMENTS_Z                  1;
  }
}

STRUCTURAL_MECHANICS_2D {
  LOAD_STEPS   1;

  MATERIALS {
    1 {

      DENS   7850;
      CP        1;

      LINEAR_ELASTIC_PROPERTIES {
        MODEL   ISOTROPIC;

        MIXY          0.3;
        EX         2.1E10;
      }
    }
  }

  MATERIAL_SET {
    ALL_ELEMENTS   1;
  }

  ELEMENT_BEHAVIOUR PLANE_STRESS;

  LOAD_STEPS_SETTINGS {
    1 {
      DURATION_TIME     1;
      TYPE   STEADY_STATE;
      MODE         LINEAR;
      SOLVER       [ARG7];

      FETI {
        METHOD          TOTAL_FETI;
        PRECONDITIONER      LUMPED;
        ITERATIVE_SOLVER       PCG;
