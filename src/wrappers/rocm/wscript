
def options(opt):
    pass

def configure(ctx):
    headers = [ "hip/hip_runtime.h", "rocblas.h", "rocsparse.h" ]
    libs = [ "rocblas", "rocsparse" ]
    ctx.check_cxx(mandatory=False, msg="Checking for 'rocm'", okmsg=" ".join(libs), define_name="HAVE_ROCM", header_name=headers, lib=libs, uselib_store="ROCM")
