FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

internalField uniform 0;


dimensions      [0 0 0 0 1 0 0];

boundaryField
{

    inner_convection
    {
	type		convection;
	h      		(5 5.5  );
	temp          	(20  30 );
	value uniform    0;
    }
    
    
    outer_convection
    {
	 type		convection;
         h     		5;
         temp          	50;
         value uniform 0;
    }

    
    inner_fixtemp
    {
	type		fixedValue;
	value uniform 	30;    
    }
    
    symmetry-zone_01
    {
	type symmetryPlane;
    }
    
    symmetry-zone_02
    {
	type symmetryPlane;
    }
    
    free
    {
       type noTemp;
       value uniform 0;
    }
    
    heat_
    {
       type heatFlux;
       value uniform  $heatFlux;
    }

}


