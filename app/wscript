
source_files = (
    "src/main.cpp",
)

def configure(ctx):
    pass

def build(ctx):
    ctx.program(
        source=source_files,
        target="espreso",
        lib="metis esbem",
        libpath="../libs",
        use="mesh_includes solver_includes pmcube_includes bem_includes esmesh essolver espmcube",
        install_path=ctx.ROOT
    )
